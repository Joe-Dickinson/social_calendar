

<div class="time-sidebar">

  <%= form_tag do %>
    <div class="form-entry"> Search Term: <%= text_field_tag "search_term", nil, :placeholder => some_random_phrase, :class => "full-search-box" %> </div>

    <%# ยง tags should be comma separated, give an example of how to do this %>

    <div class="form-entry"> Tags: <%= text_field_tag "tags", nil, :placeholder => some_random_tags, :class => "sidebar-search" %> </div>

    <div class="form-entry"> From: <%= date_field_tag "date_from", Date.today, :class => "sidebar-search" %> </div>
    <div class="form-entry"> To: <%= date_field_tag "date_to", nil, :class => "sidebar-search" %> </div>
    <div class="form-entry search-bar-centre"> <%= button_tag "Search", :class => "btn btn-success" %> </div>
  <% end %>

  <h3> <%= link_to "Today", events_today_path %> </h3>
  <h3> <%= link_to "Tomorrow", events_tomorrow_path %> </h3>
  <h3> <%= link_to "This Week", events_this_week_path %> </h3>
  <h3> <%= link_to "Next Week", events_next_week_path %> </h3>
  <br>
  <h3> <%= link_to "Past Events", events_past_path %> </h3>
</div>