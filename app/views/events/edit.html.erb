<%= form_for @event, :url => organiser_event_path(@event.organiser, @event) do |f| %>
  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>
  <fieldset>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </fieldset>
  <fieldset>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>
  <fieldset>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </fieldset>
  <fieldset class="button">
    <%= f.submit "Save" %>
  </fieldset>
  <% end %>
