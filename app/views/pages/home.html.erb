<div>
  
  <h2> <%= link_to "Participants", participants_path %> </h2>

  <%= link_to "Sign In", new_participant_session_url %>

  <%= link_to "Register", new_participant_registration_path %>
</div>


<div>
  
  <h2> Organisers </h2>

  <%= link_to "Sign in", new_organiser_session_url %>

  <%= link_to "Register", new_organiser_registration_path %>
</div>

<% if participant_signed_in? %>
  <% redirect_to participants_path(current_participant) %>
<% end %>

<% if organiser_signed_in? %> 
  <% redirect_to organiser_path(current_organiser) %>
<% end %>