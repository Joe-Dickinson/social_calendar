<!DOCTYPE html>
<html>
<head>
  <title>SocialCalendar</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if organiser_signed_in? %>
<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="span1"></div>
    <%= link_to "Events Feed", organiser_path(current_organiser), :class => "brand" %>
    <ul class="nav">
      <li> <%= link_to "Your profile", organiser_profile_path(current_organiser) %> </li>
      <li><%= link_to "Create New Event", new_organiser_event_path(current_organiser) %></li>
      <li><%= link_to "Sign Out #{current_organiser.name}", destroy_organiser_session_path(current_organiser), :class => "offset5" %></li>
    </ul>
  </div>
</div>
<% end %>

<div class="row">

  <div class="escape-navbar">

  <div class="span1"> </div>
  
  <div class="span3">

    <%= yield :sidebar %>

  </div>

  <div class="span8">

      <%= bootstrap_flash %>

      <%= yield %>

    </div> <!--end of escape-navbar-->

  </div> <!--end of span 8-->

</div> <!--end of row-->

</body>
</html>
